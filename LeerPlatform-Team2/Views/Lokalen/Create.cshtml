@model LeerPlatform_Team2.TblLokalen

@{
    ViewData["Title"] = "Create";
}

<h1>Aanmaak</h1>

<h4>Nieuw lokaal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lokaalnummer" class="control-label"></label>
                <input asp-for="Lokaalnummer" class="form-control" maxlength="4" />
                <span asp-validation-for="Lokaalnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locatie" class="control-label"></label>
                <input asp-for="Locatie" class="form-control" />
                <span asp-validation-for="Locatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capaciteit" class="control-label"></label>
                <input asp-for="Capaciteit" class="form-control" min="5" />
                <span asp-validation-for="Capaciteit" class="text-danger"></span>
            </div>
            <div class="form-group">
                Functionaliteiten
                @Html.DropDownList("FunctionaliteitenId", (SelectList)ViewBag.functie, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Nieuw" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-info">Terug</a>
            </div>
        </form>
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script> 
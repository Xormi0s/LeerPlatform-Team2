@model LeerPlatform_Team2.Models.Inschrijvingen

@{
    ViewData["Title"] = "Inschrijving";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Valideer</h1>

<h4>Inschrijvingen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InschrijvingId" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GebruikerNaam" class="control-label"></label>
                <input asp-for="GebruikerNaam" class="form-control" readonly/>
                <span asp-validation-for="GebruikerNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lescode" class="control-label"></label>
                <input asp-for="Lescode" class="form-control" readonly/>
                <span asp-validation-for="Lescode" class="text-danger"></span>
            </div>
            <div>
               Aantal ingeschreven: @ViewBag.Aantal
                <br />
               Capaciteit : @ViewBag.Capaciteit
            </div>
            <div class="form-group">
                <input type="submit" value="Sla op" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar de lijst</a>
</div>


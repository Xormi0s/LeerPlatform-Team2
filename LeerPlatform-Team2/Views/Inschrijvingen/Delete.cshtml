@model LeerPlatform_Team2.Models.Inschrijvingen

@{
    ViewData["Title"] = "Delete";
}


@if (User.IsInRole("Docent"))
{
    <h1>Afwijzen</h1>

    <h3>Bent u zeker dat deze persoon niet ingeschreven mag worden?</h3>
}

@if (User.IsInRole("Student"))
{
    <h1>Uitschrijven</h1>

    <h3>Bent u zeker dat je u wilt uitschrijven ?</h3>
}
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GebruikerNaam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GebruikerNaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lescode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lescode)
        </dd>
    </dl>


    @if (User.IsInRole("Docent"))
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="InschrijvingId" />
            <input type="submit" value="Afwijzen" class="btn btn-danger" />
            <a asp-controller="Inschrijvingen" asp-action="Index">Terug naar de lijst</a>
        </form>
    }
    @if (User.IsInRole("Student"))
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="InschrijvingId" />
            <input type="submit" value="Uitschrijven" class="btn btn-danger" />
            <a asp-controller="InschrijvingPlanning" asp-action="Index">Terug naar de lijst</a>
        </form>
    }
</div>

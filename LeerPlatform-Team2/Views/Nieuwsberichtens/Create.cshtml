@model LeerPlatform_Team2.Models.Nieuwsberichten

@{
    ViewData["Title"] = "Create";
}

<h1>Nieuw bericht</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bericht" class="control-label"></label>
                <input asp-for="Bericht" class="form-control" />
                <span asp-validation-for="Bericht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Nieuw" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model IndexModel
@{
    ViewData["Title"] = "Profiel";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Gebruikersnaam</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" />
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control" />
                <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UcllNummer"></label>
                <input asp-for="Input.UcllNummer" class="form-control" disabled />
                <span asp-validation-for="Input.UcllNummer" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
                <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Adres"></label>
                <input asp-for="Input.Adres" class="form-control" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Opslaan</button>
            <p></p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}